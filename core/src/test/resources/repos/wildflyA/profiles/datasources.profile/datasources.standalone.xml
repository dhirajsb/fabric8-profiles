<subsystem xmlns="urn:jboss:domain:datasources:4.0">
  <datasources>
    <drivers>
      <driver name="dsDriver" module="${datasources.driver-module}">
        <driver-class>${datasources.driver-class}</driver-class>
        <xa-datasource-class>${datasources.xa-datasource-class}
        </xa-datasource-class>
      </driver>
    </drivers>
    <datasource jndi-name="java:jboss/datasources/${datasources.name}"
      pool-name="${datasources.name}" enabled="true" use-java-context="true">
      <connection-url>${datasources.connection-url}</connection-url>
      <driver>dsDriver</driver>
      <security>
        <user-name>${datasources.security.username}</user-name>
        <password>${datasources.security.password}</password>
      </security>
    </datasource>
  </datasources>
</subsystem>
